tasks = []
def view_task():
    if not tasks:
        print("no task found...")
    else:
        for i, task in enumerate(tasks,  start=1):
            status = "âœ…" if task["done"] else "âŒ"
            print(f"{i}. {status} {task['title']}")
           


def add_task():
    task = input("enter the your task...")
    if task:
        tasks.append({"title": task, "done":False})
        print("âœ… Task added...")
def remove_task():
    view_task()
    if tasks:
        try:
            n = int(input("enter the number which want remove."))
            if 1<=n<=len(tasks):
                removed = tasks.pop(n-1)
                print(f"âŒ Removed: {removed['title']}")            
            else:
                print("invalid number..")
        except ValueError:
            print("please enter a number..")

def mark_task():
    view_task()
    if tasks:
        try:
            n = int(input("enter the task number to mark completed."))
            if 1 <= n <= len(tasks):
                tasks[n - 1]["done"] = True
                print("ğŸ‰ Task marked as completed!")
            else:
                print("invalid number...")
        except ValueError:
            print("please enter a number..")




def manu():
    print("\n--- TO DO LIST ---")
    print("1. add new task.")
    print("2. view all task.")
    print("3. remove task task.")
    print("4. mark a task as completed task.")
    print("5. exit.")

while True:
    manu()
    
    choice = input("enter your choice...")
    if choice == "1":
        add_task()
    elif choice == "2":
        view_task()
    elif choice == "3":
        remove_task()
    elif choice == "4":
        mark_task()
    elif choice == "5":
        print("exiting the task...")
        exit()
    else:
        print("invalid choice")

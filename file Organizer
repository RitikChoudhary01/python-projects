import os
import shutil

# ğŸ”¹ 1ï¸âƒ£ Set your Downloads folder path
folder_path = r"D:\jarvis05"
  # <-- CHANGE this to your username

# ğŸ”¹ 2ï¸âƒ£ File type categories
file_types = {
    "Images": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
    "Videos": [".mp4", ".mkv", ".avi", ".mov"],
    "Documents": [".pdf", ".docx", ".doc", ".txt", ".pptx", ".xlsx"],
    "Music": [".mp3", ".wav", ".aac"],
    "Programs": [".exe", ".msi"]
}

# ğŸ”¹ 3ï¸âƒ£ Loop through all files in folder
for file in os.listdir(folder_path):
    
    file_path = os.path.join(folder_path, file)
    
    # Skip if it's not a file
    if os.path.isfile(file_path):
        
        # ğŸ”¹ 4ï¸âƒ£ Get file extension
        _, extension = os.path.splitext(file)
        extension = extension.lower()
        
        moved = False
        
        # ğŸ”¹ 5ï¸âƒ£ Check file type and move
        for folder_name, extensions in file_types.items():
            if extension in extensions:
                
                target_folder = os.path.join(folder_path, folder_name)
                
                # ğŸ”¹ 6ï¸âƒ£ Create folder if not exists
                if not os.path.exists(target_folder):
                    os.makedirs(target_folder)
                
                # ğŸ”¹ 7ï¸âƒ£ Move file
                shutil.move(file_path, os.path.join(target_folder, file))
                print(f"Moved: {file} â†’ {folder_name}")
                
                moved = True
                break
        
        # ğŸ”¹ 8ï¸âƒ£ If extension not found â†’ move to Others
        if not moved:
            others_folder = os.path.join(folder_path, "Others")
            
            if not os.path.exists(others_folder):
                os.makedirs(others_folder)
            
            shutil.move(file_path, os.path.join(others_folder, file))
            print(f"Moved: {file} â†’ Others")

print("\nâœ… Files Organized Successfully!")
